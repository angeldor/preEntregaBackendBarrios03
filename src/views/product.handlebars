                    <div class="product-price">$ {{this.price}}</div>
                    <div class="product-links">
                        <a href="#"><i class="fa-solid fa-info"></i></a>
                        <a href="#"><i class="fa fa-shopping-cart"></i></a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </section>

    <div class="navegacion">
        <ul>
            {{#if hasPrevPage}}
            <li><a class="button" href="?page={{prevPage}}">Anterior</a></li>
            {{/if}}

            {{#if hasNextPage}}
            <li><a class="button" href="?page={{nextPage}}">Siguiente</a></li>
